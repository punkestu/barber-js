<!doctype html>
<html lang="en">
<%- include("./components/head.ejs", {title: 'Ban List'}) %>
<body class="bg-[#001058]" hx-get="/admin/ban-list" hx-swap="outerHTML" hx-target="#ban-list-slot" hx-trigger="load" hx-include="[name='init-slot']">
<%- include("./components/header.ejs") %>
<main class="py-4">
    <section class="mb-2 mx-1 flex justify-end">
        <input type="email" class="px-2 py-1" placeholder="#Cari Email Pengguna" name="email" hx-get="/admin/ban-list"
               hx-include="[name='email']" hx-vars="state:'search'" hx-swap="outerHTML" hx-target="#ban-list-slot" hx-trigger="keyup">
    </section>
    <section id="ban-list-slot" class="py-2 flex flex-col items-center">
        <input type="hidden" name="init-slot" value="1">
        <p class="my-4 text-[#FFBF1B] font-medium text-xl">Loading ...</p>
    </section>
</main>
<%- include("./components/footer.ejs") %>
<script src="https://unpkg.com/htmx.org@1.9.6"
        integrity="sha384-FhXw7b6AlE/jyjlZH5iHa/tTe9EpJ1Y55RjcgPbjeWMskSxZt1v9qkxLJWNJaGni"
        crossorigin="anonymous"></script>
</body>
</html>