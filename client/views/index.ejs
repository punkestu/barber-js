        </aside>
        <img src="/public/illustration1.png" alt="">
    </section>
    <section class="flex flex-col items-center">
        <h1 class="font-medium text-[#001058] bg-[#FFBF1B] rounded-2xl px-6 py-3 text-3xl">Lihat Jadwal</h1>
        <div class="mt-5 flex justify-center items-end w-full">
            <%
            const DAYS = ['Minggu', 'Senin', 'Selasa', 'Rabu', 'Kamis', 'Jumat', 'Sabtu'];
            const DAYS3 = ['SUN', 'MON', 'TUE', 'WED', 'THU', 'FRI', 'SAT'];
            const todayDate = new Date();
            for(let i = today; i < today + 7; i++){ %>
                <a href="/?day=<%= DAYS3[i % 7] %>"
                   <%if(day === DAYS3[i % 7]){%>
                   class="w-1/6 py-3 flex flex-col items-center rounded-t-xl
                   <%= (i - today) % 7 === 0 ? "rounded-es-xl" : ( (i - today) % 7 === 6 ? "rounded-ee-xl" : "")%>
                   text-xl lg:text-2xl font-semibold text-[#001058] bg-[#FFBF1B]"<%}else{%>
                   class="w-1/6 border-t-8 border-b-8
                   <%if((i - today) % 7 === 6){%>
                   border-r-8 rounded-r-2xl
                   <%}else if((i - today) % 7 === 0){%>
                   border-l-8 rounded-l-2xl
                   <%}%>
                   py-1 flex flex-col items-center text-sm lg:text-lg font-semibold text-[#FFBF1B] bg-[#3155FF]"<%}%>
                   >
                    <span class="font-black <%= day === DAYS3[i % 7] ? "text-4xl lg:text-6xl" : "text-2xl lg:text-4xl"%>"><%= todayDate.getDate() %></span>
                    <%= DAYS[i % 7] %>
                </a>
                <% todayDate.setDate(todayDate.getDate() + 1) %>
            <% } %>
        </div>
    </section>
    <%- include("./components/schedule_list.ejs", {barbers:barbers}) %>
    <section class="flex justify-between border-8 rounded-3xl my-10 bg-[#3155FF] pt-4">
        <img src="/public/illustration2.png" alt="">
        <aside class="text-white flex flex-col items-center flex-grow">
            <img src="/public/logo-light.png" alt="">
            <p>Ambil jadwalmu sebelum diambil orang</p>
            <p class="font-black text-2xl">Pangkas Rambut, <span class="text-[#FFBF1B]">Pangkas Waktu</span></p>
            <a href="#" class="text-[#3155FF] bg-[#FFBF1B] px-4 py-2 xl:px-8 xl:py-4 rounded-xl xl:rounded-3xl mt-4 font-black text-xl xl:text-4xl text-center">Pesan
                Sekarang</a>
