<!doctype html>
<html lang="en">
<%- include("./components/head.ejs") %>
<body class="bg-[#001058]">
<%- include("./components/header.ejs") %>
<main class="mx-14 lg:mx-36 mb-8 flex gap-4">
    <aside class="text-[#14295F] flex flex-col gap-4 w-full md:w-auto">
        <header class="bg-white px-6 py-3 rounded-2xl flex items-center gap-4 flex-grow">
            <div class="w-20 h-20 rounded-full bg-slate-200"></div>
            <aside>
                <h1 class="font-black text-3xl"><%= user.name %></h1>
                <p class="opacity-60">Jember</p>
            </aside>
        </header>
        <div class="md:hidden text-[#14295F] bg-white px-6 py-3 rounded-2xl flex flex-col gap-2">
            <h2 class="text-[#FFBF1B] font-bold text-2xl">Profile</h2>
            <hr>
            <div>
                <h3 class="font-medium text-xl">Email</h3>
                <p><%= user.email %></p>
            </div>
            <div>
                <h3 class="font-medium text-xl">Username</h3>
                <p><%= user.name %></p>
            </div>
        </div>
        <nav class="bg-white font-bold px-6 py-3 rounded-2xl">
            <button class="w-full text-left" onclick="Logout()">Keluar</button>
        </nav>
    </aside>
    <aside class="text-[#14295F] bg-white px-6 py-3 rounded-2xl flex-grow hidden md:flex flex-col gap-2">
        <h2 class="text-[#FFBF1B] font-bold text-2xl">Profile</h2>
        <hr>
        <div>
            <h3 class="font-medium text-xl">Email</h3>
            <p><%= user.email %></p>
        </div>
        <div>
            <h3 class="font-medium text-xl">Username</h3>
            <p><%= user.name %></p>
        </div>
    </aside>
</main>
<%- include("./components/footer.ejs") %>
<script>
    function Logout() {
        ClearCookies();
        location.reload();
    }
</script>
<script src="/public/script.js"></script>
<script src="https://unpkg.com/htmx.org@1.9.6"
        integrity="sha384-FhXw7b6AlE/jyjlZH5iHa/tTe9EpJ1Y55RjcgPbjeWMskSxZt1v9qkxLJWNJaGni"
        crossorigin="anonymous"></script>
</body>
</html>