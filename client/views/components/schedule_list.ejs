<section class="flex flex-col gap-3">
    <div class="w-full flex flex-col xl:flex-row gap-8 mt-10 h-96 overflow-y-scroll">
        <% barbers.forEach(({barber, schedules}, i)=>{ %>
            <aside class="bg-white h-auto p-4 rounded-xl border-4 border-[#FFBF1B]">
                <header class="h-1/5">
                    <h2 class="text-[#FFBF1B] font-black text-2xl">Kapster <%= i + 1%></h2>
                    <h3 class="font-bold text-lg"><%= barber.name %></h3>
                </header>
                <main class="w-full h-4/5 overflow-y-scroll flex justify-start items-start flex-wrap">
                    <% schedules.forEach((schedule)=>{ %>
                        <%- include("./schedule.ejs",{schedule: schedule}) %>
                    <% }) %>
                </main>
            </aside>
        <% }) %>
    </div>
    <p class="text-white">Keterangan : <span class="px-5 rounded-full bg-[#FF1D1D] mx-2"></span> Tidak tersedia <span
                class="px-5 rounded-full bg-white mx-2"></span> Tersedia</p>
</section>