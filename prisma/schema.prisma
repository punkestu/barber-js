// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Person {
  id       Int      @id @default(autoincrement())
  name     String   @unique @db.VarChar(50)
  email    String   @unique @db.VarChar(64)
  password String
  role     Role
  banned   Boolean  @default(false)
  Barber   Barber[]
  Order    Order[]
}

enum Role {
  CLIENT
  BARBER
  ADMIN
}

enum Day {
  SUN
  MON
  TUE
  WED
  THU
  FRI
  SAT
}

model Shift {
  id     Int      @id @default(autoincrement())
  start  DateTime @db.Time()
  end    DateTime @db.Time()
  day    Day
  Barber Barber[]

  @@unique([day, start])
}

model Barber {
  id        Int     @id @default(autoincrement())
  barber_id Int
  barber    Person  @relation(fields: [barber_id], references: [id])
  shift_id  Int
  shift     Shift   @relation(fields: [shift_id], references: [id])
  active    Boolean @default(true)
  Order     Order[]
}

model Order {
  id        Int        @id @default(autoincrement())
  client_id Int
  client    Person     @relation(fields: [client_id], references: [id])
  barber_id Int
  barber    Barber     @relation(fields: [barber_id], references: [id])
  date      DateTime
  state     OrderState @default(ORDERED)
}

enum OrderState {
  ORDERED
  ACCEPTED
  EXPIRED
}
